<%= form_with(model: @song, url: search_songs_path, local:true) do |f| %>

    <div class="row form-group">
        <%= f.label :title, "title", class:"control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control" %>
        </div>
         <%= f.label :artist, "artist", class:"control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.text_field :artist, class: "form-control" %>
        </div>
        <%= f.label :genre, "genre", class:"control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.select :genre, [[" ", ""],["Jpop","Jpop"],["Fpop","Fpop"],["Anime","Anime"],["Idol","Idol"],["Enka","Enka"],["Classical","Classical"],["Jazz","Jazz"]], class:"control-label col-sm-2" %>
        </div>        
        <%= f.label :key, "key", class:"control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.select :key, [
              [" ", ""], ["C", "C"], ["Cm", "Cm"], ["C#", "C#"], ["C#m", "C#m"], ["D♭", "D♭"], ["D♭m", "D♭m"], ["D", "D"], ["Dm", "Dm"], ["D#", "D#"], ["D#m", "D#m"], ["E♭", "E♭"], ["E♭m", "E♭m"], ["E", "E"], ["Em", "Em"],
              ["E#", "E#"], ["E#m", "E#m"], ["F", "F"], ["Fm", "Fm"], ["F#", "F#"], ["F#m", "F#m"], ["G♭", "G♭"], ["G♭m", "G♭m"], ["G", "G"], ["Gm", "Gm"], ["G#", "G#"], ["G#m", "G#m"], ["A♭", "A♭"], ["A♭m", "A♭m"],
              ["A", "A"], ["Am", "Am"], ["A#", "A#"], ["A#m", "A#m"], ["B♭", "B♭"], ["B♭m", "B♭m"], ["B", "B"], ["Bm", "Bm"]], class: "form-control" %>
        </div>        
        <%= f.label :section_numbar, "section", class:"control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.select :section_numbar, [
                [" ", ""], ["Intro", "Intro"], ["A", "A"], ["B", "B"], ["S", "S"], ["Interlude", "Interlude"], ["Ending", "Ending"], ["Verse", "Verse"], ["Bridge", "Bridge"], ["Chorus", "Chorus"]
            ], class: "form-control" %>
        </div>       
    </div>
    
    
    <%= f.fields_for :chords do |fs| %>
       <%= fs.fields_for :fields do |fc| %>
            <div class="chordtab">
                  <%= render 'toppages/field_fields', f: fc %>
            </div>
            
        <% end %>
       <div class="links">
            <%= link_to_add_association 'コードを追加', fs, :fields %>
        </div>
    <% end %>
    
    <%= f.submit :検索 , class:"btn btn-success" %>
<% end %>

